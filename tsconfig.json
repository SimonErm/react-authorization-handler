
{
    "compilerOptions": {
      "strictNullChecks": true,
      "moduleResolution": "node",
      "esModuleInterop": true,
      "experimentalDecorators": true,
      "jsx": "preserve",
      "noUnusedParameters": true,
      "noUnusedLocals": true,
      "noImplicitAny": true,
      "target": "es6",
      "lib": ["dom", "es2017"],
      "skipLibCheck": true,
      "declarationMap": true,
      "declaration":true,
      "outDir": "lib"
    },
    "exclude": ["node_modules", "lib", "es"],
    "include": ["src"]
  }